<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1>All Listings</h1>
   <!--<form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form>
    --> 

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        
            <% for( let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col common-card" style="width: 18rem;">
                        <img src="<%= listing.image %>" class="card-img-top" alt="listing image" style="height: 18rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                          <p class="card-text">
                            <%=listing.title%> <br>
                            &#8377;<%= listing.price %> / night
                          </p>
                        </div>
                      </div>
                </a>
                
               
                  <% } %>
       
        
    </div>
    
    
</body>
